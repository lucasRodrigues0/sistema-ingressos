{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2020",
      "strictPropertyInitialization": false, // Desativa essa verificação estrita
      "experimentalDecorators": true, // Decoradores precisam estar ativados
      "emitDecoratorMetadata": true, // Metadados para decoradores
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": [
        "./src/@types"
      ],
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ],
    "ts-node": {
      "files": true
    }
  }